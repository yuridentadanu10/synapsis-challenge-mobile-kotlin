<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.loginregister.LoginRegisterActivity">

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/bg_stroke_blue"
        android:gravity="center"
        android:padding="@dimen/dimen_8dp"
        android:text="Register" />

    <TextView
        android:id="@+id/loginUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/bg_stroke_blue"
        android:gravity="center"
        android:padding="@dimen/dimen_8dp"
        android:text="Login with username" />

    <TextView
        android:id="@+id/loginQrCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/bg_stroke_blue"
        android:gravity="center"
        android:padding="@dimen/dimen_8dp"
        android:text="Login with QR Code" />

    <TextView
        android:id="@+id/loginWithFingerPrint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/bg_stroke_blue"
        android:gravity="center"
        android:padding="@dimen/dimen_8dp"
        android:text="Login with FingerPrint" />

    <TextView
        android:id="@+id/loginWithNfcCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/bg_stroke_blue"
        android:gravity="center"
        android:padding="@dimen/dimen_8dp"
        android:text="Login with NfcCard" />

</LinearLayout>